# instantiateUfo: Create instance UFOs from a Glyphs or designspace file
rule instantiateUfo
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner fontmake -i "$instance_name" -o ufo $
      $fontmake_type $in $args $stamp
  description = instantiateUfo

# buildTTF: Build a TTF from a source file
rule buildTTF
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner fontmake --output-path $out -o ttf $
      $fontmake_type $in $args $stamp
  description = buildTTF

# autohint: Run gftools-autohint
rule autohint
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner gftools-autohint $args -o $out $in $stamp
  description = autohint

# addSubset: Add a subset from another font
rule addSubset
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner gftools-add-ds-subsets -j -y $yaml -o $
      $out $in $stamp
  description = addSubset

# fix: Run gftools-fix
rule fix
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner gftools-fix-font -o $out $args $in $stamp
  description = fix

# buildOTF: Build a OTF from a source file
rule buildOTF
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner fontmake --output-path $out -o otf $
      $fontmake_type $in $args $stamp
  description = buildOTF

# copy: Copy a file
rule copy
  command = $
      /Users/fernandodemoraescaro/Documents/Github/dives-akuru/venv/bin/python3 $
      -m gftools.builder.jobrunner cp $in $out $stamp
  description = copy

# Generating instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
build instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json: instantiateUfo $
    NotoSerifDivesAkuru.designspace
  operation = instantiateUfo
  instance_name = Noto Serif Dives Akuru Regular
  fontmake_type = -m
  fontmake_args =  --verbose WARNING 
  args =  --ufo-structure=json --output-dir instance_ufos
# Generating full-designspace/NotoSerifDivesAkuru.designspace
build full-designspace/NotoSerifDivesAkuru.designspace: addSubset $
    NotoSerifDivesAkuru.designspace
  yaml = /var/folders/vw/f5w2tmys16q9dc_tq16mv_040000gn/T/tmpzkphhc7r
# Generating
# ../fonts/NotoSerifDivesAkuru/hinted/ttf/NotoSerifDivesAkuru-Regular.ttf
build $
    ../fonts/NotoSerifDivesAkuru/hinted/ttf/NotoSerifDivesAkuru-Regular.ttf: $
    autohint $
    ../fonts/NotoSerifDivesAkuru/unhinted/ttf/NotoSerifDivesAkuru-Regular.ttf
  operation = autohint
  args = --fail-ok --auto-script --discount-latin
# Generating
# ../fonts/NotoSerifDivesAkuru/googlefonts/ttf/NotoSerifDivesAkuru-Regular.ttf
build $
    ../fonts/NotoSerifDivesAkuru/googlefonts/ttf/NotoSerifDivesAkuru-Regular.ttf: $
    fix ../fonts/NotoSerifDivesAkuru/full/ttf/NotoSerifDivesAkuru-Regular.ttf
  operation = fix
  args = --include-source-fixes
# Generating
# ../fonts/NotoSerifDivesAkuru/unhinted/ttf/NotoSerifDivesAkuru-Regular.ttf
build $
    ../fonts/NotoSerifDivesAkuru/unhinted/ttf/NotoSerifDivesAkuru-Regular.ttf: $
    buildTTF instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
  operation = buildTTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSerifDivesAkuru/unhinted/otf/NotoSerifDivesAkuru-Regular.otf
build $
    ../fonts/NotoSerifDivesAkuru/unhinted/otf/NotoSerifDivesAkuru-Regular.otf: $
    buildOTF instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
  operation = buildOTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# full-designspace/instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
build full-designspace/instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json: $
    instantiateUfo full-designspace/NotoSerifDivesAkuru.designspace
  operation = instantiateUfo
  instance_name = Noto Serif Dives Akuru Regular
  target = full-designspace/instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
  fontmake_type = -m
  fontmake_args =  --verbose WARNING 
  args =  --ufo-structure=json --output-dir full-designspace/instance_ufos
# Generating /var/folders/vw/f5w2tmys16q9dc_tq16mv_040000gn/T/tmpnxq6aoa3
build /var/folders/vw/f5w2tmys16q9dc_tq16mv_040000gn/T/tmpnxq6aoa3: $
    buildTTF $
    full-designspace/instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
  operation = buildTTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSerifDivesAkuru/full/otf/NotoSerifDivesAkuru-Regular.otf
build $
    ../fonts/NotoSerifDivesAkuru/full/otf/NotoSerifDivesAkuru-Regular.otf: $
    buildOTF $
    full-designspace/instance_ufos/NotoSerifDivesAkuru-Regular.ufo.json
  operation = buildOTF
  args = --filter ...  --filter FlattenComponentsFilter --filter $
      DecomposeTransformedComponentsFilter
  fontmake_type = -u
  fontmake_args =  --verbose WARNING 
# Generating
# ../fonts/NotoSerifDivesAkuru/full/ttf/NotoSerifDivesAkuru-Regular.ttf
build $
    ../fonts/NotoSerifDivesAkuru/full/ttf/NotoSerifDivesAkuru-Regular.ttf: $
    autohint /var/folders/vw/f5w2tmys16q9dc_tq16mv_040000gn/T/tmpnxq6aoa3
  operation = autohint
  args = --fail-ok --auto-script --discount-latin
default $
    ../fonts/NotoSerifDivesAkuru/hinted/ttf/NotoSerifDivesAkuru-Regular.ttf $
    ../fonts/NotoSerifDivesAkuru/googlefonts/ttf/NotoSerifDivesAkuru-Regular.ttf $
    ../fonts/NotoSerifDivesAkuru/unhinted/otf/NotoSerifDivesAkuru-Regular.otf $
